<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="end|bottom"
        android:textSize="50sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_gap"
        app:columnCount="4"
        app:rowCount="5">

        <Button
            android:id="@+id/c"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="C" />

        <Button
            android:id="@+id/plusMinus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="+/-"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/ce"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="CE"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/division"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="/"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/addition"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="+"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="*"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/zero"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="0"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="."
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/equal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="="
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_row="4" />


    </android.support.v7.widget.GridLayout>

</LinearLayout>